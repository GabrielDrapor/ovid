name = "ovid"
main = "src/worker/index.ts"
compatibility_date = "2023-12-01"

[build]
command = "yarn build"

[assets]
directory = "./build"
binding = "ASSETS"

[[d1_databases]]
binding = "DB"
database_name = "ovid-db"
database_id = "your-database-id-here"

[vars]
APP_URL = "https://your-domain.com"

# Secrets (set via `wrangler secret put`):
# - GOOGLE_CLIENT_ID
# - GOOGLE_CLIENT_SECRET
