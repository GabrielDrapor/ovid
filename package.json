{
  "name": "ovid",
  "version": "1.0.0",
  "description": "A bilingual reader application",
  "main": "index.js",
  "proxy": "http://127.0.0.1:8787",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "dev": "wrangler dev --ip 0.0.0.0 --port 8787 --config wrangler.toml",
    "dev:remote": "wrangler dev --remote --config wrangler.toml",
    "convert-epub": "ts-node src/cli/convert-epub.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "yarn build && wrangler deploy --config wrangler.toml",
    "preview": "wrangler dev --local src/worker/index.ts --assets ./build",
    "db:local": "wrangler d1 execute ovid-db --local --command",
    "db:local:file": "wrangler d1 execute ovid-db --local --file",
    "db:init": "wrangler d1 execute ovid-db --local --file database/schema.sql",
    "db:seed": "wrangler d1 execute ovid-db --local --file database/sample_data.sql",
    "db:remote": "wrangler d1 execute ovid-db --remote --command",
    "db:remote:file": "wrangler d1 execute ovid-db --remote --file",
    "generate-uuid": "ts-node --project scripts/tsconfig.json scripts/generate-uuid.ts",
    "import-book": "ts-node --project scripts/tsconfig.json scripts/import-book.ts",
    "list-books": "ts-node --project scripts/tsconfig.json scripts/list-books.ts --mode=local",
    "list-books:local": "ts-node --project scripts/tsconfig.json scripts/list-books.ts --mode=local",
    "list-books:remote": "ts-node --project scripts/tsconfig.json scripts/list-books.ts --mode=remote",
    "remove-book": "ts-node --project scripts/tsconfig.json scripts/remove-book.ts --mode=local",
    "remove-book:local": "ts-node --project scripts/tsconfig.json scripts/remove-book.ts --mode=local",
    "remove-book:remote": "ts-node --project scripts/tsconfig.json scripts/remove-book.ts --mode=remote",
    "sync-remote-book": "ts-node --project scripts/tsconfig.json scripts/sync-remote-book.ts",
    "generate-cover": "ts-node --project scripts/tsconfig.json scripts/generate-cover.ts"
  },
  "keywords": [
    "react",
    "bilingual",
    "reader"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "epub2": "^3.0.2",
    "js-tiktoken": "^1.0.21",
    "jszip": "^3.10.1",
    "openai": "^5.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "stripe": "^20.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250830.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24.1.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "dotenv": "^10.0.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.6.2",
    "serve": "^14.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
